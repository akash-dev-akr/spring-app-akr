package com.akrcode.akr;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.security.config.annotation.web.builders.HttpSecurity;
import org.springframework.security.web.SecurityFilterChain;
import org.springframework.security.web.authentication.UsernamePasswordAuthenticationFilter;

import com.akrcode.akr.security.JWTAuthorizationFilter;

@SpringBootApplication
public class AkrApplication {

	public static void main(String[] args) {
		SpringApplication.run(AkrApplication.class, args);
	}

	@Configuration
	static class SecurityConfig {
//
//		@Bean
//		public SecurityFilterChain securityFilterChain(HttpSecurity http) throws Exception {
//			http.csrf().disable()
//					.addFilterAfter(new JWTAuthorizationFilter(), UsernamePasswordAuthenticationFilter.class)
//					.authorizeHttpRequests(auth -> auth.anyRequest().authenticated());
//
//			return http.build();
//		}
		
		
		@Bean
		public SecurityFilterChain securityFilterChain(HttpSecurity http) throws Exception {
		    http.csrf().disable()
		        .authorizeHttpRequests(auth -> auth
		            .requestMatchers("/", "/index.html", "/styles.css", "/scripts.js", "/**/*.css", "/**/*.js", "/**/*.html").permitAll() // ✅ Allow frontend files
		            .requestMatchers("/api/**").authenticated()  // ✅ Secure API paths only
		        )
		        .addFilterAfter(new JWTAuthorizationFilter(), UsernamePasswordAuthenticationFilter.class); // ✅ Keep JWT filter for APIs

		    return http.build();
		}


	}
}
